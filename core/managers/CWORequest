import Foundation
import SwiftUI

struct CWORequest: Identifiable, Codable {
    let id: UUID
    var zone: String
    var equipment: String
    var description: String
    var parts: [SparePart]
    var imageData: Data?  // UIImage must be converted to Data before storing
    var submittedBy: String
    var timestamp: Date
    var priority: String  // e.g. "Low", "Medium", "High"
    var estimatedTime: String  // e.g. "2 hours", "30 mins"
    
    var status: String = "Pending"  // New field for manager mode
    var approvedBy: String?
    var approvedAt: Date?

    init(
        id: UUID = UUID(),
        zone: String,
        equipment: String,
        description: String,
        parts: [SparePart],
        imageData: Data?,
        submittedBy: String,
        timestamp: Date = Date(),
        priority: String = "Medium",
        estimatedTime: String = ""
    ) {
        self.id = id
        self.zone = zone
        self.equipment = equipment
        self.description = description
        self.parts = parts
        self.imageData = imageData
        self.submittedBy = submittedBy
        self.timestamp = timestamp
        self.priority = priority
        self.estimatedTime = estimatedTime
    }
}