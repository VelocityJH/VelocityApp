import SwiftUI

struct SelectPartsView: View {
    @Environment(\.dismiss) var dismiss

    var allParts: [SparePart]
    var onSelection: ([SparePart]) -> Void

    @State private var selectedParts: [SparePart] = []
    @State private var searchQuery = ""

    var filteredParts: [SparePart] {
        if searchQuery.isEmpty {
            return allParts
        } else {
            return allParts.filter { $0.name.localizedCaseInsensitiveContains(searchQuery) || $0.number.localizedCaseInsensitiveContains(searchQuery) }
        }
    }

    var body: some View {
        VStack(spacing: 16) {
            TopNavBar(title: "Select Parts", onBack: { dismiss() }, onHome: { dismiss() })

            TextField("Search Part...", text: $searchQuery)
                .padding()
                .background(Color.white)
                .cornerRadius(8)
                .padding(.horizontal)

            ScrollView {
                VStack(spacing: 12) {
                    ForEach(filteredParts) { part in
                        Button(action: {
                            if selectedParts.contains(where: { $0.id == part.id }) {
                                selectedParts.removeAll { $0.id == part.id }
                            } else {
                                selectedParts.append(part)
                            }
                        }) {
                            VStack(alignment: .leading) {
                                Text(part.name).font(.headline)
                                Text("Stock: \(part.stock)").font(.subheadline)
                                Text("Location: \(part.location)").font(.caption)
                            }
                            .padding()
                            .frame(maxWidth: .infinity, alignment: .leading)
                            .background(selectedParts.contains(where: { $0.id == part.id }) ? Color.green.opacity(0.3) : Color.gray.opacity(0.2))
                            .cornerRadius(10)
                        }
                    }
                }.padding(.horizontal)
            }

            Button("Confirm Selection") {
                onSelection(selectedParts)
                dismiss()
            }
            .padding()
            .frame(maxWidth: .infinity)
            .background(Color.blue)
            .foregroundColor(.white)
            .cornerRadius(12)
            .padding(.horizontal)
        }
        .background(StandardBackgroundView().ignoresSafeArea())
        .navigationBarBackButtonHidden(true)
        .navigationBarHidden(true)
    }
}