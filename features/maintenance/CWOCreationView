// CWOCreationView.swift

import SwiftUI

struct CWOCreationView: View {
    @Environment(\.dismiss) var dismiss

    @State private var area: String = ""
    @State private var zone: String = ""
    @State private var workDetails: String = ""
    @State private var requiredParts: [SparePart] = []
    @State private var showImagePicker = false
    @State private var selectedImage: UIImage?

    let inventory: [SparePart] = [
        SparePart(name: "Hydraulic Pump", number: "123-ABC", location: "Zone A", stock: 4, image: nil),
        SparePart(name: "Conveyor Motor", number: "456-DEF", location: "Zone B", stock: 2, image: nil),
        SparePart(name: "Control Panel", number: "789-GHI", location: "Zone C", stock: 0, image: nil),
        SparePart(name: "Gearbox Assembly", number: "321-JKL", location: "Zone D", stock: 3, image: nil)
    ]

    var body: some View {
        ZStack {
            StandardBackgroundView().ignoresSafeArea()

            ScrollView {
                VStack(spacing: 16) {
                    TopNavBar(
                        title: "CWO Creation",
                        onBack: { dismiss() },
                        onHome: { dismiss() }
                    )

                    TextField("Enter Area", text: $area)
                        .textFieldStyle(.roundedBorder)

                    TextField("Enter Zone", text: $zone)
                        .textFieldStyle(.roundedBorder)

                    Text("Work to be done:")
                        .bold()
                        .foregroundColor(.white)
                        .frame(maxWidth: .infinity, alignment: .leading)

                    TextEditor(text: $workDetails)
                        .frame(height: 100)
                        .background(Color.white)
                        .cornerRadius(10)

                    Button("Take Image of Issue") {
                        showImagePicker = true
                    }
                    .foregroundColor(.blue)

                    NavigationLink(destination:
                        SelectPartsView(
                            allParts: inventory,
                            onSelection: { selected in
                                self.requiredParts = selected
                            }
                        )
                    ) {
                        Text("Select Parts Required")
                            .frame(maxWidth: .infinity)
                            .padding()
                            .background(Color.blue)
                            .foregroundColor(.white)
                            .cornerRadius(10)
                    }

                    Button("Submit CWO") {
                        submitCWO()
                    }
                    .frame(maxWidth: .infinity)
                    .padding()
                    .background(Color.green)
                    .foregroundColor(.white)
                    .cornerRadius(10)
                }
                .padding()
            }
        }
        .sheet(isPresented: $showImagePicker) {
            // Placeholder for future ImagePicker integration
            Text("Image picker to be added")
        }
    }

    private func submitCWO() {
        print("CWO Submitted by \(UserManager.shared.username)")
        print("Area: \(area), Zone: \(zone)")
        print("Work: \(workDetails)")
        print("Parts: \(requiredParts.map { $0.name })")
    }
}