import SwiftUI

struct PartDetailView: View {
    @Binding var inventory: [Part]
    let part: Part
    
    var body: some View {
        VStack(spacing: 16) {
            if let imageName = part.imageName {
                Image(imageName)
                    .resizable()
                    .scaledToFit()
                    .frame(height: 160)
                    .foregroundColor(.gray)
            }

            Text("ðŸ§¾ Name: \(part.name)")
            Text("ðŸ”¢ Number: \(part.number)")
            Text("ðŸ“ Location: \(part.location)")
            Text("ðŸ“¦ Stock: \(part.stock)")

            Button("ðŸ“¤ Take Part") {
                if let index = inventory.firstIndex(where: { $0.id == part.id }) {
                    if inventory[index].stock > 0 {
                        inventory[index].stock -= 1
                        print("Message to manager: Part \(inventory[index].number) taken. Stock now \(inventory[index].stock)")
                    }
                }
            }
            .buttonStyle(.borderedProminent)
            .tint(.blue)

            Spacer()
        }
        .padding()
        .presentationDetents([.medium])
    }
}