import SwiftUI

struct CWOAcceptanceView: View {
    @Environment(\.dismiss) var dismiss
    @ObservedObject var manager = CWOManager.shared

    var body: some View {
        ZStack {
            StandardBackgroundView().ignoresSafeArea()

            VStack(spacing: 0) {
                TopNavBar(title: "CWO Acceptance", onBack: { dismiss() }, onHome: { dismiss() })

                ScrollView {
                    VStack(spacing: 16) {
                        ForEach(manager.cwoList.filter { $0.status == "Pending" }) { cwo in
                            CWOCard(cwo: cwo)
                        }
                    }
                    .padding()
                }
            }
        }
    }
}