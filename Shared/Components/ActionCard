import SwiftUI

struct ActionCard: View {
    var iconName: String
    var title: String

    var body: some View {
        VStack(spacing: 8) {
            Image(systemName: iconName)
                .resizable()
                .scaledToFit()
                .frame(width: 40, height: 40)

            Text(title)
                .multilineTextAlignment(.center)
                .font(.headline)
        }
        .frame(width: 150, height: 150)
        .background(Color.white)
        .cornerRadius(16)
        .shadow(radius: 3)
    }
}