struct ActionCard: View {
    var iconName: String
    var title: String
    var action: (() -> Void)? = nil  // Make optional

    var body: some View {
        Button(action: {
            action?()  // Only triggers if not nil
        }) {
            VStack(spacing: 8) {
                Image(systemName: iconName)
                    .resizable()
                    .scaledToFit()
                    .frame(width: 40, height: 40)
                Text(title)
                    .multilineTextAlignment(.center)
            }
            .frame(width: 150, height: 150)
            .background(Color.white)
            .cornerRadius(16)
        }
        .disabled(action == nil) // Let NavigationLink handle taps
    }
}