import SwiftUI

struct ActionCard: View {
    var iconName: String
    var title: String

    var body: some View {
        VStack(spacing: 12) {
            Image(systemName: iconName)
                .resizable()
                .scaledToFit()
                .frame(height: 40)

            Text(title)
                .font(.headline)
        }
        .frame(width: 160, height: 160)
        .background(Color.white)
        .cornerRadius(20)
        .shadow(radius: 4)
    }
}