import SwiftUI

struct TopNavBar: View {
    var title: String
    var onBack: () -> Void
    var onHome: () -> Void

    var body: some View {
        HStack {
            Button(action: onBack) {
                Image(systemName: "arrow.left")
            }

            Spacer()

            Text(title)
                .font(.title2)
                .bold()

            Spacer()

            Button(action: onHome) {
                Image(systemName: "house.fill")
            }
        }
        .padding()
    }
}