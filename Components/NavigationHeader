import SwiftUI

struct NavigationHeader: View {
    var title: String
    var onBack: () -> Void
    var onHome: () -> Void

    var body: some View {
        VStack(spacing: 16) {
            HStack {
                Button(action: onBack) {
                    Image(systemName: "arrow.left")
                        .foregroundColor(.white)
                        .padding()
                        .background(Color.blue)
                        .clipShape(Circle())
                }

                Spacer()

                Button(action: onHome) {
                    Image(systemName: "house.fill")
                        .foregroundColor(.white)
                        .padding()
                        .background(Color.blue)
                        .clipShape(Circle())
                }
            }
            .padding(.horizontal)

            Text(title)
                .font(.title2)
                .foregroundColor(.white)
        }
    }
}