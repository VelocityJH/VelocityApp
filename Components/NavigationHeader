import SwiftUI

struct NavigationHeader: View {
    var title: String
    var onBack: () -> Void
    var onHome: () -> Void = {}

    var body: some View {
        HStack {
            Button(action: onBack) {
                Image(systemName: "arrow.left")
                    .foregroundColor(.white)
                    .padding()
            }

            Spacer()

            Text(title)
                .font(.headline)
                .foregroundColor(.white)

            Spacer()

            Button(action: onHome) {
                Image(systemName: "house.fill")
                    .foregroundColor(.white)
                    .padding()
            }
        }
        .padding(.horizontal)
        .background(Color.blue)
    }
}